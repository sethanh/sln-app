{
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "target": "ES6",
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}