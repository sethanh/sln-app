{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES6",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "../../",
        "baseUrl": "../../",
        "paths": {
            "@my-monorepo/utils": ["packages/utils/src"],
            "@my-monorepo/ui": ["packages/ui/src"],
        }
    },
    "include": [
        "src",
        "../utils/src",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}